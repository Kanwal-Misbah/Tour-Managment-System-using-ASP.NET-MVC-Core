@model T.Models.Category

@{
    ViewData["Title"] = "Delete";
}


<h1>Delete</h1>


@{
    List<Places> places = ViewData["Places"] as List<Places>;
}

@if (places.Count() == 0)
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Category</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Type)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>

}
else
{
    <h5 class="bg-warning" style="padding:5px; text-align:center;">Sorry! We cannot delete this company because it is registered as a Category of Places</h5>
    <table style="text-align:center;">
        <thead>
            <tr>
                <th>Place Name</th>
                <th>Place Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in places)
            {
                if (item.CategoryID == Model.Id)
                {
                    <tr>
                        <td style="width:200px;">@item.Name</td>
                        <td><img style="width:200px; padding-top:20px;" src="@item.Image" alt="@item.Name" /></td>
                    </tr>
                }

            }
        </tbody>
    </table>
    <h5 class="bg-primary" style="padding:5px; text-align:center;">Please delete/update these places before deletion of Category.</h5>
}


