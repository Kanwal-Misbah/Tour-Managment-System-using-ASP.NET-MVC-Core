@model T.Models.Agency

@{
    ViewData["Title"] = "Delete";
}
<div>
    <h4>Delete the Author</h4>
    <hr />


    @{
        List<PlacesAgency> placeAgencies = ViewData["placeAgencies"] as List<PlacesAgency>;
    }
    @if (placeAgencies.Count == 0)
    {
        <h3>Are you sure you want to delete this?</h3>
        <h4>Agency</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CNIC)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CNIC)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Logo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Logo)
            </dd>
        </dl>
          <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
    }
    else
    {
        <h5 class="bg-warning" style="padding:5px; text-align:center;">Sorry! We cannot delete this Agency because he/she is registered as a writer/co-writer of Book(s)</h5>
        <table style="text-align:center;">
            <thead>
                <tr>
                    <th>Place Name</th>
                    <th>Place Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewData["places"] as List<Places>)
                {


                    foreach (var placeAgency in placeAgencies)
                    {
                        if (item.Id == placeAgency.PlaceID)
                        {
                            <tr>
                                <td style="width:200px;">@item.Name</td>
                                <td><img style="width:200px; padding-top:20px;" src="@item.Image" alt="@item.Name" /></td>
                            </tr>
                        }
                    }

                }
            </tbody>
        </table>
        <h5 class="bg-primary" style="padding:5px; text-align:center;">Please delete/update these places before deletion of Agency.</h5>
    }

</div>

